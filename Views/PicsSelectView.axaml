<UserControl
    x:Class="StarModsManager.Views.PicsSelectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarModsManager.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:PicsSelectViewModel"
    mc:Ignorable="d">
    <DockPanel Margin="40">
        <StackPanel DockPanel.Dock="Top">
            <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" />
        </StackPanel>
        <ListBox
            Margin="0,15"
            Background="Transparent"
            ItemsSource="{Binding Pics}"
            SelectedItem="{Binding SelectedPic}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</UserControl>

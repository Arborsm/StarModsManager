<UserControl
    x:Class="StarModsManager.Views.Customs.PicsSelectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customs="clr-namespace:StarModsManager.ViewModels.Customs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarModsManager.ViewModels"
    Width="500"
    Height="450"
    x:DataType="customs:PicsSelectViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <customs:PicsSelectViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" />
        </StackPanel>
        <Panel>
            <ListBox
                Background="Transparent"
                ItemsSource="{Binding Pics}"
                SelectedItem="{Binding SelectedPic}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <TextBlock IsVisible="False" Text="Cannot find any pictures in the mod page" />
            <!--  IsVisible="{Binding Pics.Count, Converter={x:Static DefaultValueConverter.Instance}}" TODO have to sleep...  -->
        </Panel>
    </DockPanel>
</UserControl>
